<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EAE7E7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:background="#ffffff"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">
<!--边框角度控件-->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tou_xiang1" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风"
                android:textSize="35sp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信号：111111111"
                android:paddingTop="10dp"
                android:textColor="#71000000"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:id="@+id/zhi_fu">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/pengyou"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="支付"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:id="@+id/shou_can"
            android:onClick="onClick">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/shi_ping"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="收藏"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:id="@+id/peny_you_quan_2"
            android:onClick="onClick">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/saoyisao"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="扫一扫"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:id="@+id/biao_qing"
            android:onClick="onClick">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/yaoyiyao"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="表情"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:id="@+id/ka_bao"
            android:onClick="onClick">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/kanyikan"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="卡包"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:id="@+id/she_zhi"
            android:onClick="onClick">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/she_zhi"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="设置"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>